@{
    ViewData["Title"] = "Ínicio";
}

<div class="flex flex-col items-center justify-center min-h-[80vh] text-center px-6">
    <!-- Título e descrição -->
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Bem-vindo ao SMNPastel</h1>
    <p class="text-lg text-gray-600 mb-8">
        Gerencie suas tarefas de forma simples e eficiente.
    </p>

    <!-- Card de Introdução -->
    <div class="bg-white shadow-lg rounded-lg p-6 max-w-lg w-full">
