@model Models.Models.LoginModel

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="flex items-center justify-center min-h-screen bg-blue-50">
    <div class="w-full md:w-1/2 bg-white bg-opacity-95 flex items-center justify-center p-12 sm:p-8 rounded-xl shadow-xl">
        <div class="w-full max-w-md space-y-6">
            <h1 class="text-3xl font-bold text-gray-900 text-center">Acessar</h1>
            <p class="text-base text-gray-700 text-center">Preencha os campos abaixo para acessar o sistema</p>

            <form asp-area="Login" asp-controller="Home" asp-action="LoginPost" method="post" class="space-y-4">
                @Html.AntiForgeryToken()

                <div>
                    <input asp-for="@Model.EmailLogin" name="EmailLogin" type="email" required class="w-full bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder-gray-500" placeholder="Insira seu e-mail" />
                    <span asp-validation-for="EmailLogin" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <input asp-for="@Model.Senha" name="Senha" required type="password" class="w-full bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder-gray-500" placeholder="Insira sua senha" />
                    <span asp-validation-for="@Model.Senha" class="text-red-600 text-sm"></span>
                </div>

                <div class="flex justify-end text-sm">
                    <a asp-area="Login" asp-controller="EsqueceuSenha" asp-action="Index" class="text-blue-600 hover:underline">Esqueceu sua senha?</a>
                </div>

                <button class="w-full bg-blue-600 text-white p-3 rounded-lg text-base font-medium transition-all hover:bg-blue-700">Acessar sistema</button>
            </form>
        </div>
    </div>
</div>